<!DOCTYPE html>
<html ng-app="YahooPlayList">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"
          integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ=="
          crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js"></script>
    <script src="https://apis.google.com/js/client.js?onload=onClientLoad" type="text/javascript"></script>
    <script src="/javascripts/controller.js"></script>
</head>
<body ng-controller="PlayListCtrl">
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <!--Sidebar content-->
            Artist:
            <select ng-model="artistName" ng-change="artistChange()">
                <option ng-repeat="artist in artistsList" value="{{artist}}">{{artist}}</option>
            </select>

            <div class="row list-item" ng-repeat="video in videoList">
                <div class="col-md-4">
                    <img class="my-thumbnail" src="{{video.snippet.thumbnails.default.url}}" ng-click="playVideo(video.id.videoId)"/>
                </div>
                <div class="col-md-8">
                    <a href="https://www.youtube.com/watch?v={{video.id.videoId}}"><h3>{{video.snippet.title}}</h3></a>

                    <p>{{video.snippet.description}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-6" ng-model="">
            <iframe width="420" height="315"
                    ng-src="{{playerSrc}}">
            </iframe>
        </div>
    </div>
</div>
</div>
</body>
</html>